{
  "name": "enterprise-app-optimization",
  "version": "0.2.0",
  "private": true,
  "description": "Enterprise app starter powered by Nx-managed microfrontends.",
  "workspaces": [
    "src/shell-app/client",
    "src/shell-app/server",
    "src/microfrontends/operations-reports/client",
    "src/microfrontends/operations-reports/server",
    "src/microfrontends/users-and-roles/client",
    "src/microfrontends/users-and-roles/server"
  ],
  "scripts": {
    "nx": "nx",
    "build": "nx run-many --target=build --all --output-style=stream",
    "build:dev": "nx run-many --target=build-dev --all --output-style=stream",
    "build:prod:run": "npm run build && nx run-many --target=serve-dist --projects shell-server,operations-reports-server,users-and-roles-server --parallel=3 --output-style=stream",
    "dev": "nx run-many --target=serve --projects shell-client,shell-server,operations-reports-client,operations-reports-server,users-and-roles-client,users-and-roles-server --parallel=6 --output-style=stream",
    "dev:prod": "nx run-many --target=serve-prod --projects shell-client,operations-reports-client,users-and-roles-client --parallel=3 --output-style=stream",
    "compose:run": "node scripts/run-compose.js",
    "lint": "eslint --ext .ts,.tsx src",
    "format": "prettier --write .",
    "analyze": "nx run shell-client:analyze && nx run operations-reports-client:analyze && nx run users-and-roles-client:analyze",
    "memlab:device-security": "memlab run --scenario tests/memlab/device-security.scenario.js",
    "find-duplicates": "node scripts/find-dup-deps.cjs",

    "demo-step-BEFORE": "node scripts/run-compose --no-detach --mode prod --version BEFORE --port 4300",

    "go-to-demo-step-INIT": "git cherry-pick 9bd2714",
    "demo-step-INIT": "node scripts/run-compose --no-detach --mode prod --version INIT --port 4301",
    "demo-step-INIT-analyze": "nx run operations-reports-client:analyze",
    "run-find-duplicates": "node scripts/find-dup-deps.cjs",

    "go-to-demo-step-BUNDLE": "git cherry-pick 93746f5",
    "demo-step-BUNDLE": "node scripts/run-compose --no-detach --mode prod --version BUNDLE --port 4302",
    "demo-step-BUNDLE-analyze": "nx run operations-reports-client:analyze",

    "go-to-demo-step-SPLIT": "git cherry-pick 6161db2",
    "demo-step-SPLIT": "node scripts/run-compose --no-detach --mode prod --version SPLIT --port 4303",

    "demo-step-REACT_BEFORE": "node scripts/run-compose --no-detach --mode dev --version REACT_BEFORE --port 4304",

    "go-to-demo-step-REACT_AFTER": "git cherry-pick 1b83a67",
    "demo-step-REACT_AFTER": "REACT_SCAN=1 node scripts/run-compose --no-detach --mode dev --version REACT_AFTER --port 4305",
    
    "demo-step-MEMORY": "node scripts/run-compose --no-detach --mode dev --version MEMORY_FIX --port 4306",
    "run-memlab:device-security": "memlab run --scenario tests/memlab/device-security.scenario.js",
    
    "go-to-demo-step-MEMORY_FIX": "git cherry-pick 0359e0c",
    "demo-step-MEMORY_FIX": "node scripts/run-compose --no-detach --mode dev --version MEMORY_FIX --port 4307"
  },
  "devDependencies": {
    "@types/react": "18.2.74",
    "@types/react-dom": "18.2.24",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "copy-webpack-plugin": "^13.0.1",
    "dotenv": "16.4.7",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.3",
    "eslint-plugin-react-hooks": "4.6.2",
    "memlab": "^1.1.60",
    "nx": "21.5.3",
    "prettier": "3.4.2",
    "typescript": "5.5.4",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}
